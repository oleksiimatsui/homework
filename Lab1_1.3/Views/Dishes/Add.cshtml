 @model DiningRoomWebApplication.Dish

@{
    ViewData["Title"] = "Add";
}

<h1>Select dish to add to menu @ViewBag.MenuName </h1>

<h4>Dish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Dish</label>
                <select asp-for="Id" class ="form-control" asp-items="ViewBag.DishId"></select>
            </div>

            <input type="hidden" value="@ViewBag.MenuId" name="MenuId"/>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>  
    <a asp-action="Index" asp-route-id="@ViewBag.MenuId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
