@model IEnumerable<DiningRoomWA.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Страви</h1>

<p>
    @if(User.IsInRole("admin"))
        {
             <a asp-action="Create">Нова страва</a>
        }
</p>
@foreach (var item in Model) {
    <form asp-action="Details" asp-route-id="@item.Id">
            <button class="normal">
                @Html.DisplayFor(modelItem => item.Name)
                @if(User.IsInRole("admin")){
                    <div style="float:right; z-index: 1">
                        <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                    </div>
                }
            </button>
    </form>     
}


